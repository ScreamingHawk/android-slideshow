	<!-- Settings -->

	<string name="title_activity_settings">設定</string>

	<string name="pref_title_show_hidden_files">隠しファイルを表示</string>
	<string name="pref_description_show_hidden_files">他のファイルマネージャーの
		隠しファイルを表示します。
	</string>

	<string name="pref_title_show_thumbnails">サムネイルを表示</string>
	<string name="pref_description_show_thumbnails">サムネイル画像を表示します。
		これをオフにするとパフォーマンスは向上しますが、どのファイルが画像で、
		どのファイルが画像でないかはわかりません。
	</string>

	<string name="pref_title_play_from_here">"ここから再生" ボタンを有効にする</string>
	<string name="pref_description_play_from_here">"ここから再生" ボタンがファイルリストに表示され、
		すべてのサブフォルダーを含む現在のフォルダーからスライドショーを開始できます。
		この機能はパフォーマンスに悪影響を与える可能性があるため、デフォルトでは無効になっています。
	</string>

	<string name="pref_title_use_device_root">デバイスのルートを使用する</string>
	<string name="pref_description_use_device_root">デバイスのルートディレクトリへのナビゲーションを有効にします。
		 これにより、SD カードなどのマウントされたストレージなど、デバイス上の任意の場所にあるファイルにアクセスできます。
		 注: 正しく機能するために root 化デバイスが必要になる場合があります。
	</string>

	<string name="pref_title_slide_delay">スライド待ち時間</string>
	<string name="pref_description_slide_delay">クリックして次の画像に変更するまでに
		画像が表示される秒数を変更できます。
	</string>

	<string name="pref_title_image_details">画像の詳細を表示</string>
	<string name="pref_description_image_details">スライドショー中の画像の詳細をオーバーレイします。
	</string>

	<string name="pref_title_stop_on_complete">完了時に停止</string>
	<string name="pref_description_stop_on_complete">すべての画像を表示したら、
		スライドショーを停止します。
	</string>

	<string name="pref_title_reverse_order">逆順</string>
	<string name="pref_description_reverse_order">スライドショーの画像を
		逆順に表示します。
	</string>

	<string name="pref_title_random_order">ランダム順</string>
	<string name="pref_description_random_order">スライドショーの画像をランダムな順番に
		表示します。
	</string>
