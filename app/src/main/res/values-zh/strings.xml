	<string name="pref_description_reverse_order">倒序显示幻灯放映中的
		图片。
	</string>

	<string name="pref_title_refresh_folder">刷新文件夹</string>
	<string name="pref_description_refresh_folder">整场放映期间每次刷新文件夹。
	</string>

	<string name="pref_title_random_order">随机顺序</string>
	<string name="pref_description_random_order">以随机顺序展示放映中的
		图片。
	</string>

	<string name="pref_title_delete_warning">删除前警告</string>
	<string name="pref_description_delete_warning">删除图片前展示一个警告弹窗。
		禁用此功能，风险自负。
	</string>
