	<array name="pref_list_description_action_on_complete">
		<item>从头开始重新启动幻灯放映</item>
		<item>停止幻灯放映</item>
		<item>暂停幻灯放映</item>
	</array>
	<string name="pref_default_value_action_on_complete">重启</string>
	<array name="pref_list_values_action_on_complete">
		<item>重启</item>
		<item>停止</item>
		<item>暂停</item>
	</array>

