	<!-- Settings -->

	<string name="title_activity_settings">设定</string>

	<string name="pref_title_show_hidden_files">展示隐藏的文件</string>
	<string name="pref_description_show_hidden_files">展示被别的文件管理器隐藏的文件。</string>

	<string name="pref_title_show_thumbnails">展示略图图像</string>
	<string name="pref_description_show_thumbnails">展示略图图像。如果关掉的话提高性能。但是你不能知道一个
		文件是不是照片。
	</string>

	<string name="pref_title_remember_location">在以前的地点开始</string>
	<string name="pref_description_remember_location">开了的时候 &appname; 在用最后一次看幻灯片的地点开始。
	</string>

	<string name="pref_title_play_from_here">使"在这儿打"的键</string>
	<string name="pref_description_play_from_here">在文件的列表的"在这儿打"键让你在目前的文件夹和子文件夹。
		基于可能产生负面影响原因，预设禁用这个特点。
	</string>

	<string name="pref_title_use_device_root">用根设备</string>
	<string name="pref_description_use_device_root">使导航往设备的根目录。这个会让你在什么手机的地方都可以
		访问文件。还可以访问存储比如存储卡。(可能需要有根目录正确工作。）
	</string>

	<string name="pref_title_slide_delay">幻灯片的延迟</string>
	<string name="pref_description_slide_delay">单击为了改变一张照片的展示的时间。
	</string>

	<string name="pref_title_image_details">展示照片的细节</string>
	<string name="pref_description_image_details">在展示幻灯片期间用图形叠置法展示的细节。
	</string>

	<string name="pref_title_stop_on_complete">安全就以后停止</string>
	<string name="pref_description_stop_on_complete">什么照片都展示就以后停止展示幻灯片。
	</string>

	<string name="pref_title_reverse_order">倒序</string>
	<string name="pref_description_reverse_order">倒序展示幻灯片的照片。
	</string>

	<string name="pref_title_random_order">随机顺序</string>
	<string name="pref_description_random_order">随机展示幻灯片的图片。
	</string>
