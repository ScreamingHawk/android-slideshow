	<!-- Settings -->

	<string name="title_activity_settings">设置</string>

	<string name="pref_title_show_hidden_files">显示隐藏文件</string>
	<string name="pref_description_show_hidden_files">展示被其他文件管理器
	隐藏的文件
	</string>

	<string name="pref_title_show_thumbnails">显示缩略图</string>
	<string name="pref_description_show_thumbnails">展示缩略图。关闭此选项会
		提升性能，但是，你将无法看到哪些文件是图像，哪些
		不是。
	</string>

	<string name="pref_title_remember_location">从上一个位置处启动</string>
	<string name="pref_description_remember_location">打开后, &appname; 将从幻灯片放映
	上次使用的位置启动。
	</string>

	<string name="pref_title_auto_start">自动启动</string>
	<string name="pref_description_auto_start">打开后, &appname; 将从所展示的最后一张图片那里开始
	幻灯放映。
	</string>

	<string name="pref_title_play_from_here">启用 "从这里放映" 按钮</string>
	<string name="pref_description_play_from_here">"从这里放映" 按钮出现在文件列表
		中，并允许你从当前文件夹，包括所有子文件夹，开始幻灯片演示。
		默认情况下此功能处于禁用状态，因为它可能会对性能产生负面影响。
	</string>

	<string name="pref_title_enable_gif_support">启用GIF支持</string>
	<string name="pref_description_enable_gif_support">出现GIF文件时，自动播放它们。
		需要 Glide 图片加载库。
	</string>

	<string name="pref_title_use_device_root">使用设备根目录</string>
	<string name="pref_description_use_device_root">允许导航到设备的
		根目录。这将允许访问设备上任何地方的文件，包括已安装的存储
		如SD卡。注意:可能需要一部已获取根权限的设备才能正常工作。
	</string>

	<string name="pref_title_slide_delay">幻灯延迟</string>
	<string name="pref_description_slide_delay">点击更改切换到下一张
		图片前，上一张图片展示应持续多少秒。
	</string>

	<string name="pref_title_image_strategy">使用Glide加载图片</string>
	<string name="pref_description_image_strategy">使用Glide加载图片。Glide 支持
		其他功能，比如预加载和GIF支持。关闭此选项将启用旧的图片自定义加载
		策略。它在一些设备上有更好的性能。
	</string>

	<string name="pref_title_preload_images">预加载图片</string>
	<string name="pref_description_preload_images">在当前幻灯放映期间加载下一张图片。
		禁用此功能可能会提高某些设备的性能。需要Glide图像加载。
	</string>

	<string name="pref_title_auto_rotate_dimen">按尺寸自动旋转</string>
	<string name="pref_description_auto_rotate_dimen">当图片宽度大于高度时，
		自动旋转图片到横向模式。
	</string>

	<string name="pref_title_skip_long_load">跳过加载时间过长的图片</string>
	<string name="pref_description_skip_long_load">在幻灯放映期间，跳过那些加载时间
		过长的图片。 当这种情况发生时，应用将显示一个通知。
	</string>

	<string name="pref_title_image_details">显示图片详情</string>
	<string name="pref_description_image_details">幻灯放映暂停时在图片上方显示详情。
	</string>

	<string name="pref_title_image_details_during">幻灯放映期间显示图片详情</string>
	<string name="pref_description_image_details_during">幻灯放映运行期间在图片
		上方显示详情。
	</string>

	<string name="pref_title_action_on_complete">幻灯放映结束时行为</string>
